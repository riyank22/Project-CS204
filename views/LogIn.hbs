<!DOCTYPE html>
<html>
<head>
    <title>Login Page</title>
    <link rel="stylesheet" href="/style.css">
</head>
<body>

    <!-- Create 5 transparent bubble divs -->
    <div class="bubble"></div>
    <div class="bubble" style="top: 30%; left: 70%;"></div>
    <div class="bubble" style="top: 70%; left: 30%;"></div>
    <div class="bubble" style="top: 10%; left: 40%;"></div>
    <div class="bubble" style="top: 80%; left: 80%;"></div>
    <div class="bubble" style="top: 50%; left: 20%;"></div>
    <div class="bubble" style="top: 40%; left: 60%;"></div>
    <div class="bubble" style="top: 20%; left: 90%;"></div>
    <div class="bubble" style="top: 90%; left: 10%;"></div>
    <div class="bubble" style="top: 60%; left: 50%;"></div>
    

    <script>
        // JavaScript to add the 'move' class to the bubble divs after the page loads
        document.addEventListener('DOMContentLoaded', function() {
            const bubbles = document.querySelectorAll('.bubble');
            bubbles.forEach((bubble, index) => {
                setTimeout(() => {
                    bubble.classList.add('move');
                }, index * 500); // Delay each bubble's animation start by 500 milliseconds
            });
        });
    </script>

    <div class="container">
        <h2>Login</h2>
        <form action="/auth/LogIn" method="POST">
            <div class="form-group">
                <label for="Email ID">Email ID:</label>
                <input type="text" id="EmailID" name="EmailID" required>
            </div>
            <div class="form-group">
                <label for="password">Password:</label>
                <input type="password" id="password" name="password" required>
            </div>
            <div class="form-group">
                <button type="submit">Login</button>
            </div>
        </form>
        {{#if message}}
            <h3>{{message}}</h3>
        {{/if}}
    </div>
</body>
</html>