<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Home Page</title>
    <link rel="stylesheet" href="/Teacher/home.css">
</head>
<body>
    <div class="bubble"></div>
<div class="bubble" style="top: 30%; left: 70%;"></div>
<div class="bubble" style="top: 70%; left: 30%;"></div>
<div class="bubble" style="top: 10%; left: 40%;"></div>
<div class="bubble" style="top: 80%; left: 80%;"></div>
<div class="bubble" style="top: 50%; left: 20%;"></div>
<div class="bubble" style="top: 40%; left: 60%;"></div>
<div class="bubble" style="top: 20%; left: 90%;"></div>
<div class="bubble" style="top: 90%; left: 10%;"></div>
<div class="bubble" style="top: 60%; left: 50%;"></div>


    <script>
        // JavaScript to add the 'move' class to the bubble divs after the page loads
        document.addEventListener('DOMContentLoaded', function() {
            const bubbles = document.querySelectorAll('.bubble');
            bubbles.forEach((bubble, index) => {
                setTimeout(() => {
                    bubble.classList.add('move');
                }, index * 500); // Delay each bubble's animation start by 500 milliseconds
            });
        });
    </script>
    <nav>
        <div class="logo">
            <h1>Group Management System</h1>
        </div>
        <div class="nav-right">
            <a href="/Teacher/CreateProject?id={{Course.Course_ID}}"class="btn">Assign Project</a>
            <a href="/Teacher/ViewCourseParticipants?Course_ID={{Course.Course_ID}}" class="btn">View Participants</a>
            <a href = "/Teacher/DeleteCourse?Course_ID={{Course.Course_ID}}" class="btn">Delete Course</a>
        </div>
    </nav>

    <h1>{{Course.Course_Code}} {{Course.Course_Name}}</h1>
    <h2> Course ID {{Course.Course_ID}}</h2>

    <div class="card-container">
        {{#each Projects}}
        <div class="card">
            <div class="card-content">
                <h2>{{this.Project_Name}}</h2>
                <h2>{{this.Project_ID}}</h2>
                <h2>{{this.Last_Date}}</h2>
                <a href="/Teacher/ViewProject?Project_ID={{this.Project_ID}}" class="btn">View</a>
            </div>
        </div>
        {{/each}}
    </div>
</body>
</html>
