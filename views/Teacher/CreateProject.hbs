<!DOCTYPE html>
<html>
<head>
    <title>Create Project</title>
    <link rel="stylesheet" href="/style.css">
</head>
<body>
    <div class="bubble"></div>
    <div class="bubble" style="top: 30%; left: 70%;"></div>
    <div class="bubble" style="top: 70%; left: 30%;"></div>
    <div class="bubble" style="top: 10%; left: 40%;"></div>
    <div class="bubble" style="top: 80%; left: 80%;"></div>
    <div class="bubble" style="top: 50%; left: 20%;"></div>
    <div class="bubble" style="top: 40%; left: 60%;"></div>
    <div class="bubble" style="top: 20%; left: 90%;"></div>
    <div class="bubble" style="top: 90%; left: 10%;"></div>
    <div class="bubble" style="top: 60%; left: 50%;"></div>
    

    <script>
        // JavaScript to add the 'move' class to the bubble divs after the page loads
        document.addEventListener('DOMContentLoaded', function() {
            const bubbles = document.querySelectorAll('.bubble');
            bubbles.forEach((bubble, index) => {
                setTimeout(() => {
                    bubble.classList.add('move');
                }, index * 500); // Delay each bubble's animation start by 500 milliseconds
            });
        });
    </script>
    <div class="container">
        <h2>Create Course</h2>
        <form action="/Teacher/CreateProject" method="POST">
            <div class="form-group"> 
                <label for="Course_Code">Couse Code:</label>
                <input type="text" id="Course_Code" name="Course_Code" value = "{{id}}" readonly>            </div>
            <div class="form-group">
                <label for="ProjectName">Project Name:</label>
                <input type="text" id="ProjectName" name="ProjectName" required>
            </div>
            <div class="form-group">
                <label for="MaxStudent">Max Number of Students</label>
                <input type="text" id="MaxStudent" name="MaxStudent" required>
            </div>
            <div class="form-group">
                <label for="MinStudent">Min Number of Students</label>
                <input type="text" id="MinStudent" name="MinStudent" required>
            </div>
            <div class="form-group">
                <label for="date">Last Date:</label>
                <input type="date" id="date" name="date" required>
            </div>
            <div class="form-group">
                <button type="submit">Create Course</button>
            </div>
        </form>
    </div>
</body>
</html>